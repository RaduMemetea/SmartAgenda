@page "{session_id:int}"
@model FrontEnd.Pages.Session.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Session:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionResponse.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SessionResponse.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionResponse.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SessionResponse.Location.GetFullInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionResponse.Start_Hour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SessionResponse.Start_Hour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SessionResponse.End_Hour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SessionResponse.End_Hour)
        </dd>
        <dt class="col-sm-2">
            Conference
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.conference.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-primary"  asp-page="/Conference/Index" asp-route-conference_id=@Model.conference.ID>Back to Conference</a>
    </form>
</div>
