@{
    ViewData["Title"] = "Add";
}

<h1>Add Session</h1>

<h4>SessionResponse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SessionResponse.Name" class="control-label"></label>
                <input asp-for="SessionResponse.Name" class="form-control" />
