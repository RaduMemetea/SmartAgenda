@model FrontEnd.Pages.Session.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SessionResponse[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionResponse[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionResponse[0].Start_Hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionResponse[0].End_Hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionResponse[0].ConferenceID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SessionResponse) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End_Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConferenceID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
