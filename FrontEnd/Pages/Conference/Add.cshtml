@page
@model FrontEnd.Pages.Conference.AddModel
@{
    ViewData["Title"] = "Add";
}
<h1>Add new conference</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Conference.Name" class="control-label"></label>
                <input asp-for="Conference.Name" class="form-control" />
                <span asp-validation-for="Conference.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conference.Start_Date" class="control-label"></label>
                <input asp-for="Conference.Start_Date" class="form-control" />
                <span asp-validation-for="Conference.Start_Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conference.End_Date" class="control-label"></label>
                <input asp-for="Conference.End_Date" class="form-control" />
                <span asp-validation-for="Conference.End_Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Conference.Tags" class="control-label"></label>
                <input type="text" asp-for="tagList" class="form-control" />
                @*<span asp-validation-for="SessionResponse.Hosts" class="text-danger"></span>*@
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="reset" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-page="/Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}